#cloud-config  

hostname: master2

coreos:    
  units:  
    - name: static.network  
      content: |  
        [Match]  
        Name=eth0  

        [Network] 
        Address=192.168.253.32/24  
        Gateway=192.168.253.3  
        DNS=192.168.253.110
        DNS=114.114.114.114

update:
  reboot-strategy: off

users:    
  - name: core  
    ssh-authorized-keys:   
      - ssh-rsa  root@bsd
    # ssh rsa 这里插入ssh的public key，用于安装后远程ssh连接时候使用。

  - groups:  
      - sudo  
      - docker
      - wheel
      - rkt
